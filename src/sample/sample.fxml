<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.RadioButton?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="10" vgap="10" gridLinesVisible="false">
    <Label fx:id="label" text="OMPSynth" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <RadioButton fx:id="sine" text="sine" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#selectSine"/>
    <RadioButton fx:id="square" text="square" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#selectSquare"/>
    <RadioButton fx:id="saw" text="saw" GridPane.rowIndex="2" GridPane.columnIndex="2" onAction="#selectSaw"/>

</GridPane>